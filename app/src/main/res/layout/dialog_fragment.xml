<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--
            <ImageView
                android:id="@+id/ivUserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_feed_top" />
            -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/post_author_icon"
                    android:src="@drawable/ic_person_outline_black"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/post_author_name"
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="145dp"
                    android:layout_height="55dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/post_author_icon"
                    android:text="User Name"
                    android:textColor="@color/text_like_counter" />

                <TextView
                    android:id="@+id/post_timestamp"
                    android:text="5 hours ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:textColor="@color/text_like_counter"
                    android:textSize="11sp" />
            </RelativeLayout>

            <View android:id="@+id/separatort"
                android:background="@color/blue_grey_500"
                android:layout_width = "match_parent"
                android:alpha="0.5"
                android:layout_height="0.5dp"/>

            <com.myapps.upesse.upes_spefest.ui.view.SquaredFrameLayout
                android:id="@+id/vImageRoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/ivFeedCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside" />

                <View
                    android:id="@+id/vBgLike"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_like_circle_background"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/ivLike"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/ic_heart_outline_white"
                    android:visibility="invisible" />

                <ProgressBar
                    android:id="@+id/pbImageLoading4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/progress_bg"
                    android:visibility="visible"
                    android:indeterminateDrawable="@drawable/progress"
                    android:indeterminate="true"
                    android:progressDrawable="@drawable/progress" />

            </com.myapps.upesse.upes_spefest.ui.view.SquaredFrameLayout>

            <!--
            <ImageView
                android:id="@+id/ivFeedBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            -->

            <View android:id="@+id/separatorc"
                android:background="@color/blue_grey_500"
                android:layout_width = "match_parent"
                android:alpha="0.5"
                android:layout_height="0.5dp"/>


            <TextView
                android:id="@+id/post_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:text="Caption"
                android:singleLine="false"
                android:textColor="@android:color/primary_text_light"
                android:textSize="15sp" />

            <View android:id="@+id/separatorb"
                android:background="@color/blue_grey_500"
                android:layout_width = "match_parent"
                android:alpha="0.5"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingBottom="7dp">

                <ImageButton
                    android:id="@+id/btnLike"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_heart_outline_grey" />

                <ImageButton
                    android:id="@+id/btnComments"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/btn_feed_action"
                    android:src="@drawable/ic_comment_outline_grey" />


                <!--
                <ImageButton
                    android:id="@+id/btnMore"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/btn_feed_action"
                    android:src="@drawable/ic_more_grey" />
                    -->

                <ImageButton
                    android:id="@+id/btnMoreSave"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/btn_feed_action"
                    android:src="@drawable/download" />

                <ImageButton
                    android:id="@+id/btnMoreDelete"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/btn_feed_action"
                    android:src="@drawable/delete_forever" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_heart_small_blue" />

                    <TextSwitcher
                        android:id="@+id/tsLikesCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:inAnimation="@anim/slide_in_likes_counter"
                        android:outAnimation="@anim/slide_out_likes_counter">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 like"
                            android:textColor="@color/text_like_counter" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_like_counter" />
                    </TextSwitcher>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
