<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="colorAccent">@color/style_color_accent</item>
        <item name="colorControlHighlight">@color/fab_color_pressed</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="WarnButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/material_red_a200</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.TransparentActivity">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.TransparentActivity.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ContextMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_context_menu</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="UserStatsTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/material_red_a200</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/style_color_primary</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/style_color_primary_dark</item>
    </style>

    <style name="SearchViewStyle" parent="@style/Widget.AppCompat.Light.SearchView">
        <item name="suggestionRowLayout">@layout/search_dropdown_item_icons_2line</item>
    </style>

    <style name="DropDownItemStyle" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@drawable/dropdown_item_background</item>
    </style>

    <style name="SearchDropDownTheme" parent="@style/RtlOverlay.Widget.AppCompat.Search.DropDown">
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <!-- <item name="colorAccent">@color/primary</item> -->
        <!-- <item name="android:textColorPrimary">@color/primary_dark</item> -->
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="android:background">@color/style_color_primary</item>
        <item name="android:dropDownItemStyle">@style/DropDownItemStyle</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="SearchResultTitle" parent="@style/TextAppearance.AppCompat.SearchResult.Title">
        <!--<item name="android:textColor">?android:attr/textColorPrimaryInverse</item>-->
        <item name="android:textColor">@color/style_color_primary</item>
    </style>

    <style name="SearchResultSubtitle" parent="@style/TextAppearance.AppCompat.SearchResult.Subtitle">
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
